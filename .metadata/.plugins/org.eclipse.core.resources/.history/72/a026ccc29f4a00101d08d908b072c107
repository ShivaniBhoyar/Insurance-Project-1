package com.example.restcontroller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.example.entity.Settelment;
import com.example.settlementservice.SettelmentService;

@RestController
public class SettlementRestController {

	@Autowired
	private SettelmentService settlementService;

	@PostMapping("/create")
	public Settelment create(@RequestBody Settelment settlement) {
		return settlementService.createSettelment(settlement);
	}

	@GetMapping("/{claimId}")
	public Settelment getByClaimId(@PathVariable Long ClaimId) {
		return settlementService.getSettelmentByclaimId(ClaimId);

	}

	@GetMapping("/getAll")
	public List<Settelment> getAll() {
		return settlementService.getAllSettlement();

	}
	
	

}
